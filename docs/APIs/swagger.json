  "paths": {
    "/user/register": {
      "post": {
        "tags": ["UserAccount"],
        "summary": "create user account",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "fullname": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Create new account successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "fullname": {
                      "type": "string"
                    },
                    "role": {
                      "type": "integer"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User info is missing"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["UserAccount"],
        "summary": "Login user account",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Login successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "fullname": {
                      "type": "string"
                    },
                    "role": {
                      "type": "integer"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User info is missing"
          }
        }
      }
    },
    "/role": {
      "post": {
        "tags": ["Role"],
        "summary": "Create new role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "roleName": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Create role successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "roleName": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid data passed!"
          }
        }
      }
    },
    "/role/:roleId": {
      "get": {
        "tags": ["Role"],
        "summary": "Get specific role by Id",
        " parameters": [
          {
            "roleId": "role Id need looking up"
          }
        ],
        "responses": {
          "200": {
            "description": "Get role by Id successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "roleName": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Found no role with provided Id"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/service/:businessId": {
      "get": {
        "tags": ["Service"],
        "summary": "Get all services of a business",
        "route parameters": [
          {
            "businessId": "business Id of business needing looking up for services"
          }
        ],
        "responses": {
          "200": {
            "description": "Get services of business successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "serviceName": {
                      "type": "string"
                    },
                    "bussinessId": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "serviceType": {
                      "type": "integer"
                    },
                    "description": {
                      "type": "string"
                    },
                    "address": {
                      "type": "string"
                    },
                    "feedback": {
                      "type": "string"
                    },
                    "rating": {
                      "type": "integer"
                    },
                    "createdAt": {
                      "type": "string"
                    },
                    "updatedAt": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error."
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
